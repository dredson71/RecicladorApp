<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.VecinosCondominioFragment">

    <TextView
        android:id="@+id/TitleVecinos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-black"
        android:text="Vecinos"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="#participantes: "
        android:textSize="15dp"
        android:id="@+id/txtParticipantesCondominio"
        app:layout_constraintStart_toStartOf="@+id/TitleVecinos"
        app:layout_constraintTop_toBottomOf="@+id/TitleVecinos" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="20 "
        android:textSize="15dp"
        android:layout_marginStart="10dp"
        app:layout_constraintStart_toEndOf="@+id/txtParticipantesCondominio"
        app:layout_constraintTop_toBottomOf="@+id/TitleVecinos" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:text="@string/VecinosPhrase"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtParticipantesCondominio" />

</androidx.constraintlayout.widget.ConstraintLayout>